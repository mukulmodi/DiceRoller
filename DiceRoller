import random

maxRoll = 6
minRoll = 1

roll_again = "yes"
numDice = int(input("How many dice to roll at once?"))
while roll_again == "yes" or roll_again == "y":
    print("Rolling the dice")
    for x in range(0,numDice):
        print(random.randint(minRoll, maxRoll))
    roll_again=input("Roll the dice again?")

coinFlip = input("Do you want to flip a coin?")
heads = 0
tails = 1
y = 0
while coinFlip == "yes" or coinFlip == "y":
    y = random.randint(heads,tails)
    if y == 1:
        print("Tails")
    else:
        print("Heads")
    coinFlip = input("Do you want to flip another coin?")

